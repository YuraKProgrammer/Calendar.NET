<Window x:Class="Calendar.DesktopClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calendar.DesktopClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Menu>
            <MenuItem Header="User">
                <MenuItem Header="Login..." Click="OnLogin_Click"/>
                <MenuItem Header="Logout"/>
            </MenuItem>
            <MenuItem Header="Calendar">
                <MenuItem Header="Get Count" Click="OnGetCount_Click"/>
                <MenuItem Header="Add Event" Click="OnAddEvent_Click"/>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
